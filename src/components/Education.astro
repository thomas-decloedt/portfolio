---
import { education } from "../data/education";
---

<section class="py-16 sm:py-20 border-t border-neutral-200" id="education">
  <div class="mx-auto max-w-3xl px-4 sm:px-6">
    <h2 class="text-2xl sm:text-3xl font-semibold text-neutral-900">
      Education
    </h2>
    <div class="mt-10 space-y-12">
      {
        education.map((entry) => (
          <article>
            <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1">
              <h3 class="text-lg font-medium text-neutral-900">
                {entry.degree} at{" "}
                {entry.institutionUrl ? (
                  <a
                    href={entry.institutionUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-neutral-900 hover:text-neutral-600 underline underline-offset-4"
                  >
                    {entry.institution}
                  </a>
                ) : (
                  entry.institution
                )}
              </h3>
              <span class="text-sm text-neutral-500 whitespace-nowrap">
                {entry.period}
              </span>
            </div>
            {entry.highlights && entry.highlights.length > 0 && (
              <ul class="mt-3 space-y-1">
                {entry.highlights.map((item) => (
                  <li class="text-neutral-600 text-sm sm:text-base max-w-prose">
                    {item}
                  </li>
                ))}
              </ul>
            )}
            {entry.links && entry.links.length > 0 && (
              <div class="mt-3 flex flex-wrap gap-3">
                {entry.links.map(({ label, url }) => (
                  <a
                    href={url}
                    class="text-sm font-medium text-neutral-900 hover:text-neutral-600 underline underline-offset-4 min-h-[44px] min-w-[44px] flex items-center"
                  >
                    {label}
                  </a>
                ))}
              </div>
            )}
            {entry.tech && entry.tech.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-2">
                {entry.tech.map((t) => (
                  <span class="inline-flex items-center rounded-md bg-neutral-100 px-2 py-0.5 text-xs text-neutral-600">
                    {t}
                  </span>
                ))}
              </div>
            )}
          </article>
        ))
      }
    </div>
  </div>
</section>
