---
import { experience } from "../data/experience";
---

<section class="py-16 sm:py-20 border-t border-neutral-200" id="experience">
  <div class="mx-auto max-w-3xl px-4 sm:px-6">
    <h2 class="text-2xl sm:text-3xl font-semibold text-neutral-900">
      Experience
    </h2>
    <div class="mt-10 space-y-12">
      {
        experience.map((entry) => (
          <article>
            <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1">
              <h3 class="text-lg font-medium text-neutral-900">
                {entry.role} at{" "}
                {entry.companyUrl ? (
                  <a
                    href={entry.companyUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-neutral-900 hover:text-neutral-600 underline underline-offset-4"
                  >
                    {entry.company}
                  </a>
                ) : (
                  entry.company
                )}
              </h3>
              <span class="text-sm text-neutral-500 whitespace-nowrap">
                {entry.period}
              </span>
            </div>
            <div class="mt-3 space-y-3">
              {entry.content.map((item) => (
                <div>
                  <p class="text-neutral-600 text-sm sm:text-base max-w-prose">
                    {item.text}
                  </p>
                  {item.links && item.links.length > 0 && (
                    <div class="mt-1 flex flex-wrap gap-3">
                      {item.links.map(({ label, url }) => (
                        <a
                          href={url}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="text-sm font-medium text-neutral-900 hover:text-neutral-600 underline underline-offset-4 min-h-[44px] min-w-[44px] flex items-center"
                        >
                          {label}
                        </a>
                      ))}
                    </div>
                  )}
                </div>
              ))}
            </div>
            {entry.tech && entry.tech.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-2">
                {entry.tech.map((t) => (
                  <span class="inline-flex items-center rounded-md bg-neutral-100 px-2 py-0.5 text-xs text-neutral-600">
                    {t}
                  </span>
                ))}
              </div>
            )}
          </article>
        ))
      }
    </div>
  </div>
</section>
