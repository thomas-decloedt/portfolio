---
import { projects } from "../data/projects";
---

<section class="py-16 sm:py-20 border-t border-neutral-200" id="projects">
  <div class="mx-auto max-w-3xl px-4 sm:px-6">
    <h2 class="text-2xl sm:text-3xl font-semibold text-neutral-900">
      Projects
    </h2>
    <div class="mt-10 grid gap-8 sm:grid-cols-2">
      {
        projects.map((project) => (
          <article
            id={project.id ? `project-${project.id}` : undefined}
            class="flex flex-col rounded-lg border border-neutral-200 p-6 hover:border-neutral-300 transition-colors scroll-mt-24"
          >
            <h3 class="text-lg font-medium text-neutral-900">
              {project.title}
            </h3>
            <p class="mt-2 text-sm text-neutral-600 max-w-prose">
              {project.description}
            </p>
            <ul class="mt-3 space-y-1">
              {project.highlights.slice(0, 2).map((h) => (
                <li class="text-xs sm:text-sm text-neutral-500 flex gap-2">
                  <span class="text-neutral-400 shrink-0">Â·</span>
                  <span>{h}</span>
                </li>
              ))}
            </ul>
            <div class="mt-auto pt-4 flex flex-col gap-3">
              {project.links && project.links.length > 0 && (
                <div class="flex flex-wrap gap-3">
                  {project.links.map(({ label, url }) => (
                    <a
                      href={url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm font-medium text-neutral-900 hover:text-neutral-600 underline underline-offset-4 min-h-[44px] min-w-[44px] flex items-center"
                    >
                      {label}
                    </a>
                  ))}
                </div>
              )}
              <div class="flex flex-wrap gap-2">
                {project.tech.map((t) => (
                  <span class="inline-flex items-center rounded-md bg-neutral-100 px-2 py-0.5 text-xs text-neutral-600">
                    {t}
                  </span>
                ))}
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
